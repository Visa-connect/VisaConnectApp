# =============================================================================
# Environment Variables Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control - it contains sensitive information

# =============================================================================
# Database Configuration
# =============================================================================
# For local development, use individual connection parameters:
DB_USER=postgres
DB_HOST=localhost
DB_NAME=visaconnect
DB_PORT=5431

# For production (Heroku), use DATABASE_URL instead:
# DATABASE_URL=postgres://username:password@host:port/database
# Note: If DATABASE_URL is set, individual DB_* variables are ignored

# =============================================================================
# Server Configuration
# =============================================================================
PORT=8080
NODE_ENV=development

# =============================================================================
# Firebase Configuration
# =============================================================================
# Firebase Service Account JSON (required for Firebase Admin SDK)
# This is a JSON string containing the service account credentials
# Get this from Firebase Console > Project Settings > Service Accounts
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"your-project-id","private_key_id":"key-id","private_key":"-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE KEY\n-----END PRIVATE KEY-----\n","client_email":"firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com","client_id":"123456789","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://www.googleapis.com/oauth2/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-xxxxx%40your-project.iam.gserviceaccount.com"}

# Firebase Web API Key (required for password verification)
# Use the same value as REACT_APP_FIREBASE_API_KEY from your frontend
# Get this from Firebase Console > Project Settings > General > Web API Key
REACT_APP_FIREBASE_WEB_API_KEY=AIzaSyC...your_actual_api_key_here

# Firebase Storage Bucket (optional, defaults to visaconnectus-stage.firebasestorage.app)
# Get this from Firebase Console > Storage > Bucket URL
FIREBASE_STORAGE_BUCKET=your-project-id.firebasestorage.app

# =============================================================================
# Cloudinary Configuration
# =============================================================================
# Cloudinary is used for image storage and manipulation
# Get these from Cloudinary Dashboard > Settings > API Keys
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# =============================================================================
# Email Configuration (SendGrid)
# =============================================================================
# SendGrid API Key for sending transactional emails
# Get this from SendGrid Dashboard > Settings > API Keys
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here

# Admin email address (for system notifications)
ADMIN_EMAIL=admin@visaconnect.com

# From email address (sender address for transactional emails)
FROM_EMAIL=noreply@visaconnect.com

# Admin dashboard URL (for email links)
ADMIN_DASHBOARD_URL=https://visaconnect.com/admin

# Application URL (base URL for email links)
APP_URL=https://visaconnect.com
